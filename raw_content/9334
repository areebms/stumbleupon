<!-- AD INSERTION CODE -->
<script type="text/javascript">
var banners=new Array ("banners/banner_modernist.gif",
                       "banners/banner_wecare.jpg",
                       "banners/eG-Stuff-header.jpg",
                       "banners/present_banner.gif");
var bannerLinks=new Array ("http://forums.egullet.org/index.php?/topic/137271-qa-with-the-modernist-cuisine-team/",
                           "http://egullet.we-care.com/",
                           "http://www.cafepress.com/egullet",
                           "https://www.paypal.com/cgi-bin/webscr?cmd=_xclick&business=giving%40egullet%2eorg&item_name=Take%20Gully%20to%20Dinner&item_number=tgtd0000&no_shipping=0&tax=0&currency_code=USD&lc=US&bn=PP%2dDonationsBF&charset=UTF%2d8");
var weights=new Array (2.0,1.0,1.0,1.0);

var weightSum = 0;
var cutoffs = new Array();
for (i = 0; i < banners.length; i++) {
  weightSum += weights[i];
  cutoffs[i] = weightSum;
}

var number = Math.random() * weightSum;
var bannerSelected = banners[0];
var bannerLink = bannerLinks[0];
for (i=0; i < banners.length; i++) {
  if (number <= cutoffs[i]) {
    bannerSelected = banners[i];
    bannerLink = bannerLinks[i];
    pageTracker._trackEvent("banner_ad","loaded",banners[i]);
    break;
  }
}

function BannerClicked ()
{
    pageTracker._trackEvent("banner_ad", "clicked",bannerSelected)
}

try {
  var element = document.getElementById ('adspeed');
  element.innerHTML = "<a href='" + bannerLink + "' onclick='javascript:BannerClicked();'><img src='" + bannerSelected + "'/></a>"
} catch (e) {
}

</script>


<!-- AD INSERTION CODE -->
	</body>
