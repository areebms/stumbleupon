<script type='text/javascript'>
function popUpAboutTags ()
{
    var helpid = "tagsystem_help_popup";
    tagsPopup = new ipb.Popup( helpid, {     type: 'balloon',
										    initial: "<div style='padding:5px;'><p style='text-align:center;'><b>About the tag system</b></p><br/><p>Tags are an experimental new feature here at the eG Forums (see Bouche posts <a href='http://egullet.org/p1777817'>here</a> and <a href='http://egullet.org/p1781482'>here</a>): they allow topic starters to choose additional categories for the discussion they are starting, similar to a keyword system. If a topic has a tag it will show in this area. Clicking on that tag will take you to a listing of all topics with the same tag. </p><br/><p>If you believe a tag is incorrect, please use the report button. Please send comments, questions, or bug reports about the tag system to <a href='mailto:feedback@egullet.org'>feedback@egullet.org</a>.</p></div>",
										    stem: true,
										    hideAtStart: false,
										    attach: { target: 'tagsystem_aboutTagsLink', position: 'auto' },
										    w: '450px' });
}
</script>


<script type='text/javascript'>
var popid   = 'tagsystem_modifytags_popup_' + ipb.topic.topic_id;
var tagsPopup;
var uniqueID = 1;
function tagsystem_ajaxEditTags ()
{
	var URL = ipb.vars['base_url'] + 'app=tagsystem&module=ajax&secure_key='+ipb.vars['secure_hash']+'&section=modifytags&do=getalltags&tid='+ ipb.topic.topic_id+'&uniqueid='+uniqueID;
	tagsPopup = new ipb.Popup( popid, {     type: 'balloon',
										    initial: "<p>Loading tags...</p>",
										    ajaxURL: URL,
										    stem: true,
										    hideAtStart: false,
										    attach: { target: 'tagsystem_editTagsButton', position: 'auto' },
										    w: '450px' });
}


function saveTagsAndClose()
{
  saveTags ();
  tagsPopup.hide();
  tagsPopup = null;
  uniqueID++;
}


function saveTagsAndPM ()
{
  saveTags ();
  tagsPopup.hide();
  tagsPopup = null;
  uniqueID++;
  location.href = ipb.vars['base_url'] + 'app=members&module=messaging&section=send&do=form&mod=true&modaction=retag&modtids=' + ipb.topic.topic_id;
}


function saveTags ()
{
  // This is an AJAX post request: most of the parameters are in the POST data
  var URL = ipb.vars['base_url'] + 'app=tagsystem&secure_key='+ipb.vars['secure_hash']+'&module=ajax&section=modifytags&do=updatetopictags';

  var tags = [];
  var checkboxNodes = document.getElementById ("tagsystem_showSearchTagArea_"+uniqueID).getElementsByTagName ("input");
  for (var i = 0; i < checkboxNodes.length; i++) {
    var id = checkboxNodes.item(i)['value'];
    var checked = (checkboxNodes.item(i)['checked']==true?1:0);
    tags.push ('"' + id + '"' + ':' + checked);
  }
  var jsonTags = encodeURIComponent('{' + tags.join(', ') + '}');

  new Ajax.Request (URL,
  {
    method: 'post',
    evalJSON: 'true',
    parameters: {
      tid: ipb.topic.topic_id,
      tags: jsonTags
    },
    onSuccess: tagsSaved
  } );

}


function tagsSaved (t)
{
  if( t.responseJSON['error'] ) {
    alert( "Error:" + t.responseJSON['error'] );
  } else {
    updateTagArea();
  }
}

function updateTagArea ()
{
  var URL = ipb.vars['base_url'] + 'app=tagsystem&secure_key='+ipb.vars['secure_hash']+'&module=ajax&section=modifytags&do=gettaghtml&tid='+ipb.topic.topic_id;

  new Ajax.Request (URL,
  {
    method: 'get',
    evalJSON: 'false',
    onSuccess: 
      function (t)
      {
        // Update the tags that we are showing:
        var div = document.getElementById ("tagsystem_tagDisplayArea");
        div.innerHTML = t.responseText;
      }
  } );
}

// Initialize the tag area:
updateTagArea();


</script>
