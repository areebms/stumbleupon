			$.setupSharing({
				container: $('#share_and_save')
			});
			$(document).on('shareURL', function(event, url) {
				$('#share_and_save').data('url', url);
			});
			var scripts = [
				'https://apis.google.com/js/plusone.js',
				'http://platform.linkedin.com/in.js',
				'http://s7.addthis.com/js/250/addthis_widget.js#pub=tedtalks'
			];
			_.each(scripts, function(script) {
				var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
				po.src = script;
				var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
			});
			//setup twitter box
			$('#share_field')
				.clear_field()
				.change(function(event) {
					$(this).closest('.share-data').data('twitterTemplate', this.value + ' {{title}} {{url}} #TED');
				});
			$('#twitter-post').submit(function(event) {
				event.preventDefault();
				$('#share_and_save .twitter').click();
			});

			$('#share_and_save .email').click(function() {
				$.post('/talks/addemailed', {id: 433}, function() {}, 'json');
			});

			$('.copy_paste').selectall_field();

