				event.preventDefault();
				var self = $(this);
				if (!self.data('loaded')) $('#download_dialog').load('/download/links/slug/PeterReinhart_2008P/type/talks/ext/mp4', function() {
					self.data('loaded', true);
				});
				$("#download_dialog").dialog('open');
			});
