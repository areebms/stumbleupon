function swapSubstituteHTML(id,element){
    jQuery(id).html("");

    jQuery(id).html(jQuery(jQuery(element).parents(".item")[0]).find(".video-url").html());

    var width = jQuery(id).width();
    var height = jQuery(id).height();

    jQuery(id).css({"height":height,"width":width});

    jQuery(id).find("embed").css({"height":height,"width":width});
    jQuery(id).find("embed").attr({"height":height,"width":width});

}

}

