	var adObject = new YahooAdsObject();
	adObject.setSlots(["Top1", "Bottom", "Frame1", "x01", "Middle", "TopRight"]);
	adObject.setPubId("23021736472");
			
	var y_topic='20276501'; var y_custom=''; var y_pub='Chicago Sun-Times';
	if (document.URL.match(/mitchell/i)) {
		  y_custom='Mary Mitchell';
	} else if (document.URL.match(/derogatis/i)) {
		  y_custom='Jim DeRogatis';
	} else if (document.URL.match(/sweet/i)) {
		  y_custom='Lynn Sweet';
	} else if (document.URL.match(/ebert/i)) {
		  y_topic='20264501';
		  y_custom='Roger Ebert';
	} else if (document.URL.match(/stevetest/i)) {
		  y_topic='20281001';
		  y_custom='sports';
	}

	adObject.setSiteName(y_pub);
	adObject.setCategories(y_custom);
	adObject.setTopics(y_topic);
	generateAdSlots(adObject);
</script>

