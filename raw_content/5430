    <script type="text/javascript" language="javascript">
		function playvideo(playerID, videoID, divName, playerName) {
			var params = {};
			params.playerID = playerID;
			params.videoId = videoID;
			params.autoStart = "false";
			params.bgcolor = "#FFFFFF";
			params.width = "302";
			params.height = "216";
			params.isVid = "true";
			params.wmode = "opaque";
			params.videoSmoothing = "true";

			var player = brightcove.createElement("object");
			player.id = playerName;
			var parameter;
			for (var i in params) {
				parameter = brightcove.createElement("param");
				parameter.name = i;
				parameter.value = params[i];
				player.appendChild(parameter);
			}

			var playerContainer = document.getElementById(divName);

			brightcove.removeExperience(playerName);
			brightcove.createExperience(player, playerContainer, true);
		}
	</script>
	
		             
	
	 
	


