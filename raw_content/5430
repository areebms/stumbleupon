		if (($.browser.msie) && ($.browser.version == "6.0")) {
			$('.td_watch .td_play span, .next span, .prev span, .td_frame span, .td_tsr_photo span, .td_top_arrow, .td_nav_popup, .td_carousel_controls li span, .td_featured .td_frame').addClass("fixPNG");
