		// enable navigation hover
		var nav_tabs = $(".td_nav_main > ul > li").each(function () {
			var $this = $(this);

			$this.bind('mouseenter', function () {
				var timeout = $this.data('hover-timeout');
				window.clearTimeout(timeout);
				$this.addClass("hover").find('shape').show();
				nav_tabs.not($this).removeClass('hover').find('shape').hide();
			}).bind('mouseleave', function () {
				$this.data('hover-timeout', window.setTimeout(function () {
					$this.removeClass("hover").find('shape').hide();
				}, 500));
			});
		});

		// Last menu align
		$(".td_nav_popup:last").addClass("td_last_menu_pos");
	</script>
	<script type="text/javascript">
		function setSearch(mode) {
			var hdn = document.getElementById('hdnSearchType');
			var aSearchAll = document.getElementById('spnSearchAll');
			var aSearchRecipies = document.getElementById('spnSearchRecipies');
			if (hdn != null) {
				hdn.value = mode;
				if (aSearchAll != null) {
					if (hdn.value == 'recipies') {
						aSearchRecipies.className = 'active'; aSearchAll.className = '';
					}
					else {
						aSearchRecipies.className = '';
						aSearchAll.className = 'active';
					}
				}
			}
		}
		function doHeaderSearch() {
			var hdn = document.getElementById('hdnSearchType');
			var txt = document.getElementById('txtSearch');
			if (hdn != null && txt != null) {
				var mode = hdn.value;
				if (mode == null) mode = 'all';
				var kwd = txt.value;
				if (kwd.length > 0 && kwd != 'search chatelaine') {
					//var loc = '/search?atype=' + mode + '&q=' + escape(kwd) + "&r=all:";
					var loc = 'http://www.chatelaine.com/en/search?q=' + escape(kwd); document.location.href = loc;
				}
			}
		}
		function sbmtSearch(e) {
			var keynum; var keychar;
			if (window.event)
			// IE 
			{ keynum = e.keyCode; }
			else if (e.which)
			// Netscape/Firefox/Opera 
			{ keynum = e.which; }
			keychar = String.fromCharCode(keynum);
			if (keychar == '\n' || keychar == '\r') {
				doHeaderSearch(); return false;
			}
		} 
	</script>
	<script type="text/javascript">
		jQuery(document).ready(
		function () {
			if ($("#spnSearchAll") != null && $("#spnSearchRecipies") != null) {
				$("#spnSearchAll").addClass('active');
				$("#spnSearchRecipies").removeClass('active');
			}
		}); 
	</script>

