<script type="text/javascript">
$(document).ready(function(){
	$("#forum_comment").val('Leave a comment');
    if (/\S/.test($('#commentList').html())) { //anything not whitespace
    	$('#commentsNav').show();
    }
});
$("#forum_comment").click(function(){
	if ($("#forum_comment").val() == 'Leave a comment') {
	   $("#forum_comment").addClass('expanded');
	   $("#forum_comment").val('');
	}
});	
$("#commentsNavCron").click(function(){
	$("#commentsSortLoader").show();
    ArticleComments.sort = "cron";
    ArticleComments.pagination = "0-" + ArticleComments.paginationLoad;
	ArticleComments.getComments();
});
$("#commentsNavReverseCron").click(function(){
	$("#commentsSortLoader").show();
    ArticleComments.sort = "reverse";
    ArticleComments.pagination = "0-" + ArticleComments.paginationLoad;
	ArticleComments.getComments();
});
$("#commentsNavTopRecommended").click(function(){
	$("#commentsSortLoader").show();
    ArticleComments.sort = "recommends";
    ArticleComments.pagination = "0-" + ArticleComments.paginationLoad;
	ArticleComments.getComments();
});
$("#commentsNavLoadMore").click(function(){
	$("#commentsNavLoadMoreClick").show();  
	var oldPagination = ArticleComments.pagination;
	var oldPaginationA = oldPagination.split('-');
	ArticleComments.pagination = '0-' + ((oldPaginationA[1] * 1) + (ArticleComments.paginationLoad * 1));
	ArticleComments.getComments();
});
ArticleComments.subject = 'Re: A View Through Some \'Transparent\' LCD Screens';
ArticleComments.threadId = 91997;
ArticleComments.communityId = 2023;
ArticleComments.getComments();
</script>

		
