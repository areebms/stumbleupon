		var jaSlideGallery = null;	
		
		function navigationInit () {
			var slideOptions={
				folder: 'images/stories/slidegallery/',
				bw: 160,
				w: 30,
				bh: 120,
				h: 20,
				num_elem: 4,
				mode: 'horizontal', 
				direction: 'left', 
				total: 3,
				url: '',
				wrapper: 'ja-gallery-navigation-center',
				duration: 5000,
				interval: 2000,
				running: false,
				lightbox: 1,
				livesite: '.',
				active: 0,
				paddingThumb: 4,
				bigduration: 1000,
				auto: 0				
			};
			
			jaSlideGallery = new JA_SlideGallery(slideOptions);
			elems = $('ja-gallery-navigation-center').getElementsByClassName ('jasg-element');
			for(i=0;i<elems.length;i++){
				jaSlideGallery.update (elems[i].innerHTML, i);
			}
			jaSlideGallery.setPos(null);
			if(jaSlideGallery.options.auto){				
				jaSlideGallery.nextRun();
			}
	
			$("ja-gallery-left-img").onmouseover = function(){setDirection('left',0);};
			$("ja-gallery-left-img").onmouseout = function(){setDirection('left',1);};
			$("ja-gallery-right-img").onmouseover = function(){setDirection('right',0);};
			$("ja-gallery-right-img").onmouseout = function(){setDirection('right',1);};
			tooltipinit(1);
		}
			
		jaAddEvent(window, 'load', navigationInit);
		
		function setDirection(direction,ret){
			jaSlideGallery.options.direction = (direction=='left')?'right':'left';
			if(ret){
				$('ja-gallery-'+direction+'-img').src = 'modules/mod_jaslidegallery/ja_slidegallery/re-'+direction+'.gif';
				jaSlideGallery.options.interval = 2000;
				jaSlideGallery.options.duration = 5000;
				jaSlideGallery.options.auto = 0;
				jaSlideGallery.options.mouseis = 0;
				jaSlideGallery.nextRun();
			}
			else{
				$('ja-gallery-'+direction+'-img').src = 'modules/mod_jaslidegallery/ja_slidegallery/re-'+direction+'-hover.gif';
				jaSlideGallery.options.interval = 300;
				jaSlideGallery.options.duration = 300;
				jaSlideGallery.options.auto = 1;		
				jaSlideGallery.options.mouseis = 1;
				jaSlideGallery.nextRun();
			}
		}	
		
		function onLightbox(){
			jaSlideGallery.options.mouseis = 1;
			jaSlideGallery.options.auto = 0;		
			jaSlideGallery.nextRun();
		}
	
		function offLightbox(){
			jaSlideGallery.options.mouseis = 0;
			jaSlideGallery.options.auto = 0;
			jaSlideGallery.nextRun();
		}
		
		function inArray(idactive,array){
			for(i=0;i<array.length;i++){
				if(idactive == (array[i].id + '_full_img')) return true;
			}	
			return false;
		}
		//addEvent - attach a function to an event
		function jaAddEvent(obj, evType, fn){ 
			 if (obj.addEventListener){ 
			   obj.addEventListener(evType, fn, false); 
			   return true; 
			 } else if (obj.attachEvent){ 
			   var r = obj.attachEvent("on"+evType, fn); 
			   return r; 
			 } else { 
			   return false; 
			 } 
		}
		
		function changeFullimage(idactive){		
			jaSlideGallery.onChangeImage(idactive);
			jaSlideGallery.options.auto = 0;
			window.fireEvent('changeImg');
		}
	
		function tooltipinit(lightbox) {
			if(lightbox){
				var tipNameSpaceURI = "http://www.w3.org/1999/xhtml";
				if(!tipContainerID){ var tipContainerID = "tooltip";}
				var tipContainer = document.getElementById(tipContainerID);
			
				if(!tipContainer) {
				  tipContainer = document.createElementNS ? document.createElementNS(tipNameSpaceURI, "div") : document.createElement("div");
					tipContainer.setAttribute("id", tipContainerID);
				  document.getElementsByTagName("body").item(0).appendChild(tipContainer);
				}
		
				tip = document.getElementById ("tooltip");		
				if(jaSlideGallery.options.active) anchors = document.getElementById ("ja_slidegallery_link_" + jaSlideGallery.options.active);		
				else anchors = document.getElementById ("ja_slidegallery_link_0");		
				offsetX = -30,
				offsetY = 25,
				document.onmousemove = function (evt) {
					var x=0, y=0;
					if (document.all) {//IE
						x = (document.documentElement && document.documentElement.scrollLeft) ? document.documentElement.scrollLeft : document.body.scrollLeft;
						y = (document.documentElement && document.documentElement.scrollTop) ? document.documentElement.scrollTop : document.body.scrollTop;
						x += window.event.clientX;
						y += window.event.clientY;
						
					} else {//Good Browsers
						x = evt.pageX;
						y = evt.pageY;
					}
					tip.style.left = (x + offsetX) + "px";
					tip.style.top = (y + offsetY) + "px";		
				};
				anchors.onmouseover = function() {
					tip.innerHTML = "Click here to view large image";
					tip.style.display = "block";		
				};
				anchors.onmouseout = function() {
					tip.innerHTML = "";
					tip.style.display = "none";
				};
			}
		}
		
					window.addEvent('changeImg', Lightbox.init.bind(Lightbox));
			window.addEvent('changeImg', tooltipinit.bind(1));
			window.addEvent('onLightbox', onLightbox);
			window.addEvent('offLightbox', offLightbox);
