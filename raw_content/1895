    function redirectOK(txt, placeHolder, alertMsg)
    {
        var searchPhrase = document.getElementById(txt).value;
    
        if(searchPhrase == placeHolder || searchPhrase == '')
        {
            if(alertMsg != '') {
                alert(alertMsg);
            }
            
            return false;            
        }
        return true;
    }
// ]]>
