<SCRIPT LANGUAGE="JavaScript">
		function getCookieVal (offset) {  
		var endstr = document.cookie.indexOf (";", offset);  
		if (endstr == -1)    
		endstr = document.cookie.length;  
		return unescape(document.cookie.substring(offset, endstr));
		}
		function GetCookie (name) {  
		var arg = name + "=";  
		var alen = arg.length;  
		var clen = document.cookie.length;  
		var i = 0;  
		while (i < clen) {    
		var j = i + alen;    
		if (document.cookie.substring(i, j) == arg)      
		return getCookieVal (j);    
		i = document.cookie.indexOf(" ", i) + 1;    
		if (i == 0) break;   
		}  
		return null;
		}
		</script>
<SCRIPT LANGUAGE="JavaScript">
			function CutCookie () 
			{  
			var favorite = GetCookie('canoe');
			loopcookie :
			if (favorite != null) 
			   {
				  switch (favorite) 
				  {
					 case 'primus' :
						// check to see if referrer is from one of the following domains
						if ((document.referrer.indexOf("primus.canoe") != -1) || (document.referrer.indexOf("wham.canoe") != -1) || (document.referrer.indexOf("jam.canoe") != -1) || (document.referrer.indexOf("slam.canoe") != -1) || (document.referrer.indexOf("money.canoe") != -1) || (document.referrer.indexOf("cnews.canoe") != -1) || (document.referrer.indexOf("travel.canoe") != -1) || (document.referrer.indexOf("lifewise.canoe") != -1) || (document.referrer.indexOf("dent.canoe") != -1) || (document.referrer.indexOf("homeandgarden.canoe") != -1)) 
							 {
							 document.write("<SCRI" + "PT LANGUAGE='JavaScript1.2' SRC='http://primus.canoe.ca/Top/primus750.js'><\/SCR" + "IPT>");
							 break;
							 }
						else { 
						// if referrer is not one of the above delete the primus cookie
						setCookie('canoe', 'primus', apple, '/', '.canoe.ca');
							 }
			
					 case 'snap' :   
					 break loopcookie;
					 case 'classic' :   
					 break loopcookie;
			
				  }
			   }
			}
			
			
			var caution = false;
			 function fixDate(date) {
					var base = new Date(0);
					var skew = base.getTime();
					if (skew > 0)
					date.setTime(date.getTime() - skew);
			}
			 
			var apple = new Date();
			fixDate(apple);
			apple.setTime(apple.getTime() + (-24 * 0 * 0 * 0 *0));
			
			function setCookie( jscookie, value, expires, path, domain, secure) {
			
					var curCookie =  jscookie + "=" + escape(value) +
							((expires) ? "; expires=" + expires.toGMTString() : "") +
							((path) ? "; path=" + path : "") +
							((domain) ? "; domain=" + domain : "") +
							((secure) ? "; secure" : "");
					if (!caution || (name + "=" + escape(value)).length <= 4000)
							document.cookie = curCookie;
					else
					if (confirm("Cookie exceeds 4KB and will be cut!"))
							document.cookie = curCookie;
				}	
			</script>
