<SCRIPT LANGUAGE="JavaScript">function selecturl(s) 
{
  var gourl = s.options[s.selectedIndex].value;
  if ((s.selectedIndex!=0) && ((gourl != null) && (gourl != "") ))
  {
   window.top.location.href = gourl;
  }
}
</SCRIPT>
